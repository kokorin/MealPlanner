<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://www.w3.org/1999/xhtml" fx:controller="mealplanner.view.product.ProductSelectController"
        prefWidth="640" prefHeight="480">
    <padding>
        <Insets left="5" right="5" top="5" bottom="5"/>
    </padding>

    <top>
        <HBox>
            <TextField promptText="ID or name"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="typeColumn" text="Type"/>
                <TableColumn fx:id="unitColumn" text="Unit"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets left="5" right="5" top="5" bottom="5"/>
            </padding>

            <Button fx:id="selectButton" text="Select" prefWidth="150" onMousePressed="#select"/>
            <Button text="Cancel" prefWidth="150" onMousePressed="#cancel"/>
        </HBox>
    </bottom>
</BorderPane>